{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "format",
            "command": "~/.dotnet/tools/fantomas --pageWidth 160 --keepNewlineAfter --spaceBeforeColon '${file}'",
            "type": "shell",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
            }
        },
        {
            "label": "test",
            "command": "dotnet test tests/tests.fsproj",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}